@using Client.Extensions
@model Client.Models.ProductDto

<div class="product-container">
    <h2>@Model.Title</h2>
    <p>Added on @Model.Date</p>
        <p>@Model.ShortDescription</p>
        <span class="image-index">  
            @Html.Image(Model.Image1)
        </span>

        <div style="display: inline-flex">
                @Html.ActionLink("More Details", "GetProduct", "Product", new { id = @Model.Id },new{ @class = "button1" })
 
                @Html.ActionLink("Add to Cart", "AddToCart", "Product", new { productId = @Model.Id }, new { @class = "button1" }) 
        </div>

</div>